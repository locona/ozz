[
  {
    "id": "resources:oathkeeper:rules:ozz:healthcheck",
    "upstream": {
      "url": "http://localhost:9999/"
    },
    "match": {
      "url": "http://localhost:4455/health",
      "methods": [
        "GET"
      ]
    },
    "authenticators": [
      {
        "handler": "oauth2_introspection",
        "config": {
          "required_scope": [
            "healthcheck"
          ]
        }
      }
    ],
    "authorizer": {
      "handler": "allow"
    },
    "credentials_issuer": {
      "handler": "id_token",
      "config": {
         "aud": []
      }
    }
  }
]
